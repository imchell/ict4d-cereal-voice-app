<?xml version="1.0" encoding="UTF-8"?>
<vxml xmlns="http://www.w3.org/2001/vxml" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.w3.org/2001/vxml 
   http://www.w3.org/TR/voicexml20/vxml.xsd"
   version="2.0">
  <form>
    <field name="leaving" type="digits">
      <prompt xml:lang="fr-fr">
      Voulez-vous une autre requête ? Appuyez sur un pour confirmer. Appuyez sur deux pour quitter l'application.
      </prompt>
      <filled>
        <if cond="leaving == '1'"> 
        <prompt xml:lang="fr-fr">L'application est redirigée vers le début.</prompt>
        <goto next="actions-fr.xml" />
        <else/>
        <prompt xml:lang="fr-fr">Merci d'utiliser. Au revoir !</prompt>
        </if> 
      </filled>
    </field>
  </form>
</vxml>
